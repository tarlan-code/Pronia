
@{
    ViewData["Title"] = "Shipping Area Update";
}




@model ShippingArea
<div class="container">
	<div class="row justify-content-center">
		<div class="col-11">
			<h5>Update Shipping Area Section card</h5>
			<form class="user" method="post">
				<div class="form-group row">
					<div class="col-sm-6 mb-sm-2">
						<input asp-for="Icon" type="text" class="form-control form-control-user"
							   placeholder="Icon">
						<span asp-validation-for="Icon"></span>
					</div>
					<div class="col-sm-6 mb-sm-2">
						<input asp-for="Title" type="text" class="form-control form-control-user"
							   placeholder="Title">
						<span asp-validation-for="Title"></span>

					</div>
				</div>
				<div class="form-group row">
					<div class="col-sm-12">
						<input asp-for="ShortDesc" type="text" class="form-control form-control-user"
							   placeholder="Short Description">
						<span asp-validation-for="ShortDesc"></span>

					</div>
				</div>


				<div class="row justify-content-center">

					<div class="col-lg-5 col-sm-12 col-md-10 ">

						<button type="submit" class="btn btn-primary btn-user btn-block">
							Update
						</button>
						<hr>
						<a asp-action="Index" asp-controller="ShippingArea" class="btn btn-google btn-user btn-block">
							Cancel
						</a>
					</div>
				</div>

			</form>

		</div>
	</div>
</div>

