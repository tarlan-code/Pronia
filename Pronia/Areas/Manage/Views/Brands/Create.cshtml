
@{
    ViewData["Title"] = "Brand Create";
}


@model Brand
<div class="container">
	<div class="row justify-content-center">
		<div class="col-11">
			<h5>Create Brand</h5>
			<form class="user" method="post" >
				<div class="form-group row">
					<div class="col-12 mt-3">
						<input asp-for="Image" type="text" class="form-control form-control-user"
							   placeholder="Image">
						<span asp-validation-for="Image"></span>
					</div>
					<div class="col-12 mt-3">
						<input asp-for="Link" type="text" class="form-control form-control-user"
							   placeholder="URL">
						<span asp-validation-for="Link"></span>
					</div>

				</div>
				<div class="row justify-content-center">

					<div class="col-lg-5 col-sm-12 col-md-10 ">

						<button type="submit" class="btn btn-primary btn-user btn-block">
							Create
						</button>
						<hr>
						<a asp-action="Index" asp-controller="Brands" class="btn btn-google btn-user btn-block">
							Cancel
						</a>
					</div>
				</div>

			</form>

		</div>
	</div>
</div>



